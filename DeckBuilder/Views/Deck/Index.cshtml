@model List<DeckBuilder.Models.Deck>

@{ ViewBag.Title = "Decks";}

<h1>@ViewBag.Title</h1>

<ul>

    @foreach (var deck in Model)
     {
        <li>@deck.Name</li>
        @*<li><a asp-controller="Deck" asp-action="ViewDeck" asp-route-id="@deck.ID">@Deck.Name</a></li>*@
    }
</ul>

@if (Model.Count == 0)
{
    <p>You have no decks!</p>
}

<a asp-controller="Deck" asp-action="Add">Start a Deck!</a>