@model DeckBuilder.ViewModels.ViewDeckViewModel

    @{ ViewBag.Title = Model.Deck.Name;}

<h1>@ViewBag.Title</h1>

<h3> Deck Size: @Model.Deck.Amount</h3>

@if (Model.Cards.Count > 0)
{
<ul>
    @foreach (var card in Model.Cards)
    {
        <li>@card.Card.Name  : @card.Amount</li>

    }
</ul>
}

@if (Model.Cards.Count == 0)
{
    <p>This deck has no cards!</p>

}

<p><a asp-controller="Deck" asp-action="EditDeck" asp-route-id="@Model.Deck.ID">Edit this Deck</a></p>